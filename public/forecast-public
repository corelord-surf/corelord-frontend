<body>
  <div class="cl-container">
    <h1>7-Day Public Forecast</h1>
    <p>This page shows publicly cached data for a predefined surf break. The data is sourced from Stormglass.</p>
    <pre id="forecastJson">Loading forecast...</pre>
  </div>

  <script src="Nav.js"></script>
  <script>
    async function loadForecast() {
      const breakId = 15; // default: Ribeira dâ€™Ilhas
      const hours = 168;

      try {
        const res = await fetch(`/api/forecast/timeseries?breakId=${breakId}&hours=${hours}`);
        const json = await res.json();
        document.getElementById("forecastJson").textContent = JSON.stringify(json, null, 2);
      } catch (err) {
        document.getElementById("forecastJson").textContent = "Failed to load forecast data.";
        console.error("Error loading forecast:", err);
      }
    }

    loadForecast();
  </script>
</body>
